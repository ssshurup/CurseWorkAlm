<Page x:Class="CurseWorkAlm.Pages.LoginP"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CurseWorkAlm.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginP" Background="White">

    <Grid>
        <Grid Width="250" Height="200">
            <TextBlock Text="Login" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Top"/>
            <TextBlock Text="Login" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,30,0,0"/>
            <TextBox Text="{Binding login}" VerticalAlignment="Top" Margin="100,30,10,0"/>

            <TextBlock Text="Password" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,60,0,0"/>
            <TextBox Text="{Binding password}" VerticalAlignment="Top" Margin="100,60,10,0"/>

            <Button x:Name="LogBT" Content="Login" VerticalAlignment="Bottom" Margin="20,0,20,50" Click="LogBT_Click"/>
            <Button x:Name="RegBT" Content="Register" VerticalAlignment="Bottom" Margin="20,0,20,20" Click="RegBT_Click"/>

        </Grid>
    </Grid>
</Page>
