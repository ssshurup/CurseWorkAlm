<Page x:Class="CurseWorkAlm.Pages.AdmPages.SheduleP"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CurseWorkAlm.Pages.AdmPages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SheduleP" Background="White">

    <Grid>
        <StackPanel Width="200" Height="270">
            <TextBlock Text="Дата"  FontSize="14" Margin="10" HorizontalAlignment="Center"/>
            <DatePicker Name="DaysShDP"/>
            <TextBlock Text="Работник" FontSize="14"  HorizontalAlignment="Center" Margin="0,90,0,0"/>

            <ComboBox Name="EmployeeCB" DisplayMemberPath="name" Margin="10,10,10,0"/>
            <Button x:Name="AddBT" Content="Готово" Margin="10,10,10,0" Click="AddBT_Click"/>
            <Button x:Name="BackBT" Content="Назад" Margin="10" Click="BackBT_Click" />
        </StackPanel>
    </Grid>
</Page>
